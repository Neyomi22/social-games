<h1>Booking</h1>

<div class="booking-body">

  <% if @bookings.empty? %>
    <h3 class="no-booking-text">No Bookings</h3>
  <% else %>

  <ul>
    <% @bookings.each do |booking| %>
        <div class="all-bookings-card">
          <p><strong>Booked by: </strong><%= booking.user.email %></p>
          <p><strong>Booked event: </strong><%= booking.event.title%></p>
          <p><strong>Organiser: </strong><%= booking.event.user.email %></p>
          <p><strong>Date: </strong><%= booking.event.starts_at.strftime("%d-%m-%Y") %></p>
          <p><strong>Time: </strong><%= booking.event.starts_at.strftime("%I:%M%p") %></p>
          <div>
					  <%= link_to 'Delete', booking_path(booking.id), method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-primary" %>
					</div>
        </div>
    <% end %>  
  </ul>
  <% end %>
</div>
