<%= link_to 'Add event', new_event_path %>

<h1>ALL EVENTS</h1>
<div class="event-index-container">
	<div class="event-index-card">
		<% @events.each do |event| %>
			<%= event.title %>
			<%= event.starts_at %>
			<p><%= event.number_of_participants %> spots available.</p>	
			<%= link_to 'Show event', event_path(event)%>
			<br>
		<% end %>
	</div>
	
  <div id="map"
		style="width: 100%; height: 600px;"
		data-markers="<%= @markers.to_json %>"
		data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>
</div>