
<%= simple_form_for @event do |f| %>
	<%= f.input :title %>
	<%= f.input :description %>
	<%= f.input :location %>
	<%= f.input :sport, as: :select %>
	<%= f.input :number_of_participants %>
	<%= f.input :starts_at %>
	<%= f.input	:duration %>
	<%= f.button :submit %>
<% end %>

