<div class="container">
	<div class="add-event-form d-flex justify-content-center">
			<%= simple_form_for @event, html: { class: "sports-form"} do |f| %>
			<div class="row no-gutters">
				<div class="col-md-6">
					<%= f.input :photo, as: :file, input_html: { class: 'js-photo-input' } %>
					<img class="js-photo-preview" />
				</div>
				<div class="col-md-6">
				<div class="form-body">
				
				<div class="card mb-4">
					<div class="card-body">
						<h3><%= form_heading %> your game</h3>
						<div class="row">
							<div class="col-md-6">
								<%= f.input :sport, :collection => %w[Basketball Badminton Netball Tennis], prompt: "Select your Sport", label: false %>
							</div>
							<div class="col-md-6">
								<%= f.input :skill_level, :collection => %w[Basic Intermediate Advanced], prompt: "Rate your skill ", label: false %>
							</div>
						</div>
					</div>
				</div>
				<div class="mb-4 card">
					<div class="card-body">
					<h3>Tell us about it...</h3>
				<%= f.input :title, placeholder: "Title your event", label: false %>
				<%= f.input :description, input_html: {class: "descript"}, placeholder: "Add a description", label: false %>
				</div>
				</div>
				<div class="mb-4 card">
					<div class="card-body">
					<h3>How's this going down?</h3>
				<%= f.input :location, placeholder: "Whats the address?", label: false %>
				<%= f.input :starts_at, placeholder: "Date", :order => [:day, :month, :year], label: false %>
				<%= f.input	:duration,  as: :select, collection: (1..5), prompt: "How many hours?", label: false %>
				</div>
				</div>
					<div class="mb-4 card">
						<div class="card-body">
						<h3>How many peeps (keep it covid-safe y'all)</h3>
					<%= f.input :number_of_participants, placeholder: "How many people can join this event?", input_html: { min: '1', step: 'any' }, label: false  %>
					<%# f.input :starts_at, as: :date_picker , label: false %>
					</div>
				</div>
				</div>
				<div class="mb-4">
					<%= f.button :submit %>
				</div>
				</div>
			<% end %>

		</div>
	</div>
</div>