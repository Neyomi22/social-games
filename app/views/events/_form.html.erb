
<%= simple_form_for @event do |f| %>
	<%= f.input :title %>
	<%= f.input :description %>
	<%= f.input :location %>
	<%= f.input :sport, :collection => %w[Basketball Badminton Netball Tennis] %>
	<%= f.input :skill_level, :collection => %w[Basic Intermediate Advanced] %>
	<%= f.input :number_of_participants, input_html: { min: '1', step: 'any' }  %>
	<%= f.input :starts_at %>
	<%= f.input	:duration,  as: :select, collection: (1..5) %>
	<%= f.button :submit %>
<% end %>

